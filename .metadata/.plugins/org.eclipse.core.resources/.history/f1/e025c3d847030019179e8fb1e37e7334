package dec19;

public class genconvertnewmethod {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int dn =convertbase(547,10,2);
	
		
		System.out.println(dn + " ");

	}

	public static int convertbase(int sn, int sb, int db) {
		int sum = 0;
		int mul=10;
		int kn=sn%mul;
		int p=0;
		while(kn!=0)
		{
		p+=1;
		mul=mul*10;
		
		int pow = 1;
		int rem;
		
		while (kn != 0) {
			rem = kn % db;
			sn = kn / db;
			sum = sum + rem * pow;
			pow = pow * sb;
			
		}
		sum=sum*p;
		p=p*1000;
		kn=sn%mul;
		}
		return sum;

	}
}
