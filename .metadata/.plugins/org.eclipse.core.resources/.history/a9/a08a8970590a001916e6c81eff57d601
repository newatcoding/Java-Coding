	public static void maxvalue(int a,int[] n,int c)
	{
		if(a==5)
		{
			return;
		}
		
		
		
		if(c>n[a+1])
		{
			c=n[a];
		}
		else if(c<n[a+1])
		{
			c=n[a+1];
		}
		maxvalue(a+1, n,c);
		System.out.println(c);
	}
}