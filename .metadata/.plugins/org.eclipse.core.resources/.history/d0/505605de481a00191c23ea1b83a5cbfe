package page6;

import java.util.Scanner;

public class recursionpattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		 Scanner scn=new Scanner(System.in);
//	        int num=scn.nextInt();
	        printrighttriangle(1,1,5);
	    }
	    public  static void printrighttriangle(int i,int j,int num)
	    {
	        if(i>=num)
	        {
	            return;
	        }
	        if(j>i)
	        {
	        	return;
	        }
	        System.out.print("*");
	        printrighttriangle(i, j+1, num);
	      System.out.println("*");
	        printrighttriangle(i+1, 1, num);
	    }
	}