package page2;

import java.util.Scanner;

public class Pattern10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner n=new Scanner(System.in);
        int b=n.nextInt();
        int space ;
        int star=1;
        int i;
        int j;
         int val=1;
        for(i=1;i<=b;i++)
        {
        	space=0;
        	//for left value
        	for(j=1;j<=i;j++){
        		System.out.print(j+" ");
        	}
        	j--;
        	//for space
        	while(space!=(b*2-1-(i*2))){
        		System.out.print(" ");
        		space++;
        	}
        	//for right value
        	if(i==b){
        		j--;
        	}
        	while(j!=0 )
        	{
        		System.out.print(j+" ");
        		j--;
        	}
        	System.out.println();
        }
    }


	}
	
	
