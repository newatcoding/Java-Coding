	public static void find(int a, int[] n,int num)
	{
		if(a==n.length)
		{
			System.out.println("value not found");
			return;
		}
		if(n[a]==num)
		{
			System.out.println("number is in position" + a);
			return;
		}
		find(a+1,n,num);
	}
}