package page2;

import java.util.Scanner;

public class Pattern10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner n=new Scanner(System.in);
        int b=n.nextInt();
        int space=0 ;
        int star=1;
        int i;
        int j;
         int val=1;
        for(i=1;i<=b;i++)
        {
        	//for left value
        	for(j=1;j<=i;j++){
        		System.out.print(j+" ");
        	}
        	j--;
        	//for space
//        	for(int k=1;k<=space;k++)
//        	{
//        		
//        	}
        	//for right value
        	while(j!=0 && i!=b)
        	{
        		System.out.print(j+" ");
        		j--;
        	}
        	System.out.println();
        }
    }


	}
	
	
