package hackerrank;

import java.util.Scanner;

public class pattern15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 Scanner n=new Scanner(System.in);
	        int b=n.nextInt();
	       int i;
	       
	       int c=b;
	        for(i=1;i<=b;i++)
	        {
	 
	           for(int k=1;k<=i;k++)
	                { 
	                
	                    System.out.print(k+"");
	                   
	                }
	          
	            for(int k=(c*2)-1;k>0;k--)
	            {
	                System.out.print(" ");
	               
	            }
	           for(int k=i;k>=1;k--)
	                { 
	                
	                    System.out.print(k+"");
	                } 
	           c=c-2;

	            System.out.println(" ");
	           	    }

	} 
	        }

