package dec18;

import java.util.Scanner;

public class diamondfor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner n=new Scanner(System.in);
		int b=n.nextInt();
		
		int i;
		int j;
		for(i=1;i<=b;i++)
		{
			for(j=3;j<=i;j++)
			{
				System.out.print("* ");
				
			}
			System.out.println(" ");
		}
	}

}